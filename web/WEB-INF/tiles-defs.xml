<?xml version="1.0" encoding="ISO-8859-1" ?>
<!DOCTYPE tiles-definitions PUBLIC
       "-//Apache Software Foundation//DTD Tiles Configuration 1.1//EN"
       "http://struts.apache.org/dtds/tiles-config_1_1.dtd">
<tiles-definitions>
	<!--  Main layout definition for the login page of caNanoLab -->
	<definition name="calab.login"
		path="/layout/mainLayoutNoContentSpace.jsp">
		<put name="title" value="caNanoLab Home" />
		<put name="nciHeader" value="/html/nciHeader.html" />
		<put name="calabHeader" value="/html/calabHeader.html" />
		<put name="calabSidemenu" value="/html/calabBaseSidemenu.html" />
		<put name="calabMainmenu" value="/calabMainmenu.jsp" />
		<put name="calabContent" value="/bodyLogin.jsp" />
		<put name="calabFooter" value="/html/calabFooter.html" />
		<put name="nciFooter" value="/html/nciFooter.html" />
		<put name="menu" value="home" />
		<putList name="items">
			<item value="HELP"
				link="openHelpWindow('webHelp/index.html')" />
				<item value="GLOSSARY"
				link="openHelpWindow('webHelp/index.html?single=false&amp;context=caNanoLab&amp;topic=glossary_help')" />
			<item value="LOGOUT" link="logout.do" />
		</putList>
	</definition>
	<!--  Main layout definition for pages after log in-->
	<definition name="calab.home" path="/layout/mainLayout.jsp">
		<put name="title" value="caNanoLab Home" />
		<put name="nciHeader" value="/html/nciHeader.html" />
		<put name="calabHeader" value="/html/calabHeader.html" />
		<put name="calabSidemenu" value="/html/calabBaseSidemenu.html" />
		<put name="calabMainmenu" value="/calabMainmenu.jsp" />
		<put name="calabFooter" value="/html/calabFooter.html" />
		<put name="nciFooter" value="/html/nciFooter.html" />
		<put name="menu" value="home" />
		<put name="onloadJavascript" value="" />
		<putList name="items">
			<item value="HOME" link="gotoPage('index.jsp')" />
			<item value="PROTOCOLS"
				link="gotoPage('manageProtocol.do')" />
			<item value="NANOPARTICLES"
				link="gotoPage('manageParticle.do')" />
			<item value="DOCUMENTS" link="gotoPage('manageDocument.do')" />
			<item value="ADMINISTRATION" link="openHelpWindow('/upt')" />
			<item value="HELP"
				link="openHelpWindow('webHelp/index.html')" />
			<item value="GLOSSARY"
				link="openHelpWindow('webHelp/index.html?single=false&amp;context=caNanoLab&amp;topic=glossary_help')" />
			<item value="LOGOUT" link="gotoPage('logout.do')" />
		</putList>
	</definition>
	<definition name="home.error" extends="calab.home">
		<put name="calabContent" value="/bodyMessage.jsp" />
		<put name="menu" value="home" />
	</definition>
	<definition name="calab.help" extends="calab.login">
		<put name="calabContent" value="/help/bodyOnlineHelp.jsp" />
		<put name="menu" value="help" />
	</definition>
	<definition name="calab.welcome" extends="calab.home">
		<put name="calabContent" value="/bodyWelcome.jsp" />
		<put name="menu" value="home" />
	</definition>
	<definition name="calab.password" extends="calab.home">
		<put name="calabContent" value="/bodyUpdatePassword.jsp" />
		<put name="menu" value="home" />
	</definition>
	<definition name="calab.disclaimer"
		path="/layout/disclaimerLayout.jsp">
		<put name="title" value="caNanoLab Home" />
		<put name="nciHeader" value="/html/nciHeader.html" />
		<put name="calabHeader" value="/html/calabHeader.html" />
		<put name="calabContent" value="/bodyDisclaimer.jsp" />
		<put name="calabFooter" value="/bodyMessage.jsp" />
		<put name="nciFooter" value="/html/nciFooter.html" />
	</definition>
</tiles-definitions>
