<?xml version="1.0" encoding="ISO-8859-1" ?>
<!DOCTYPE tiles-definitions PUBLIC
       "-//Apache Software Foundation//DTD Tiles Configuration 1.1//EN"
       "http://struts.apache.org/dtds/tiles-config_1_1.dtd">
<tiles-definitions>
	<!-- definition for the manage nanoparticle page -->
	<definition name="report.manageReport" extends="calab.home">
		<put name="calabContent" value="/bodyManageItem.jsp" />
		<put name="menu" value="reports" />
		<put name="item" value="Report" />
		<put name="itemDescription"
			value="/report/bodyReportDescription.jsp" />
		<put name="createLink"
			value="submitReport.do?dispatch=setup&amp;page=0" />
		<put name="searchLink" value="searchReport.do?dispatch=setup" />
	</definition>

	<definition name="report.message" extends="calab.home">
		<put name="calabContent" value="/bodyMessage.jsp?bundle=report" />
		<put name="menu" value="reports" />
	</definition>

	<definition name="report.submitReport" extends="calab.home">
		<put name="calabContent" value="/report/bodySubmitReport.jsp" />
		<put name="menu" value="reports" />
	</definition>
	<!-- definition for the search report page -->
	<definition name="report.searchReport" extends="calab.home">
		<put name="calabContent" value="/report/bodySearchReport.jsp" />
		<put name="menu" value="reports" />
	</definition>

	<definition name="report.viewReport" extends="calab.home">
		<put name="calabContent" value="/report/bodyViewReportFile.jsp" />
		<put name="menu" value="reports" />
		<put name="reportActionName" value="updateReport" />
	</definition>
	
	<!-- definition for the search report result page -->
	<definition name="report.searchReportResult"
		extends="calab.home">
		<put name="calabContent"
			value="/report/bodySearchReportResult.jsp" />
		<put name="menu" value="reports" />
	</definition>

	<definition name="report.remoteSearchReport"
		extends="calab.home">
		<put name="calabContent"
			value="/report/bodyRemoteSearchReport.jsp" />
		<put name="menu" value="reports" />
	</definition>

	<!-- definition for the remote search report result page -->
	<definition name="report.remoteSearchReportResult"
		extends="calab.home">
		<put name="calabContent"
			value="/report/bodyRemoteSearchReportResult.jsp" />
		<put name="menu" value="reports" />
	</definition>
</tiles-definitions>
