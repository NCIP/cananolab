<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" "http://www.springframework.org/dtd/spring-beans.dtd">
<beans default-lazy-init="false" default-dependency-check="none"
	default-autowire="no">

	<bean name="ApplicationServiceImpl"
		class="gov.nih.nci.cananolab.system.applicationservice.impl.CustomizedApplicationServiceImpl"
		singleton="true">
		<constructor-arg ref="ClassCache" index="0"></constructor-arg>
		<constructor-arg ref="SystemProperties" index="1"></constructor-arg>
	</bean>

	<!-- Bean Definitions -->
	<bean name="ClassCache" class="gov.nih.nci.system.util.ClassCache"
		singleton="true">
		<property name="daoList">
			<list>
				<!--  Add any DAO's here -->
				<ref bean="ORMDAO" />
			</list>
		</property>
	</bean>

	<bean name="SystemProperties" class="java.util.Properties">
		<constructor-arg>
			<props>
				<prop key="caseSensitive">false</prop>
				<prop key="resultCountPerQuery">10000</prop>
				<prop key="resultOutputFormatter">
					resultOutputFormatter.xsl
				</prop>
				<prop key="rowCounter">200</prop>
				<prop key="securityEnabled">false</prop>
				<prop key="instanceLevelSecurityEnabled">false</prop>
				<prop key="attributeLevelSecurityEnabled">false</prop>
			</props>
		</constructor-arg>
	</bean>

	<bean id="SystemPropertiesMap" class="java.util.HashMap">
		<constructor-arg>
			<map>
				<!--
					<entry key="AUTHENTICATION_PROVIDER" value-ref="authenticationProvider"/>
				-->
			</map>
		</constructor-arg>
	</bean>

	<bean name="ORMDAOFactory"
		class="gov.nih.nci.cananolab.system.dao.orm.CustomizedORMDAOFactoryBean">
		<constructor-arg value="hibernate.cfg.xml" index="0"></constructor-arg>
		<!-- configLocation -->
		<constructor-arg ref="SystemProperties" index="1"></constructor-arg>
		<constructor-arg ref="SystemPropertiesMap" index="2"></constructor-arg>
		<constructor-arg ref="SessionFactoryHolder" index="3"></constructor-arg>
	</bean>

	<bean name="SessionFactoryHolder"
		class="gov.nih.nci.cananolab.system.dao.SessionFactoryHolder" />

	<bean id="HibernateTransactionManager"
		class="org.springframework.orm.hibernate3.HibernateTransactionManager">
		<property name="sessionFactory">
			<bean factory-bean="SessionFactoryHolder"
				factory-method="getInstance" />
		</property>
	</bean>

	<bean id="TxInterceptor"
		class="org.springframework.transaction.interceptor.TransactionInterceptor">
		<property name="transactionManager">
			<ref bean="HibernateTransactionManager" />
		</property>
		<property name="transactionAttributes">
			<props>
				<prop key="save*">
					PROPAGATION_REQUIRED,-gov.nih.nci.system.applicationservice.ApplicationException,-gov.nih.nci.system.dao.DAOException
				</prop>
				<prop key="delete*">
					PROPAGATION_REQUIRED,-gov.nih.nci.system.applicationservice.ApplicationException,-gov.nih.nci.system.dao.DAOException
				</prop>
				<prop key="*">PROPAGATION_REQUIRED,readOnly</prop>
			</props>
		</property>
	</bean>

	<bean id="ORMDAO"
		class="org.springframework.aop.framework.ProxyFactoryBean"
		singleton="true">
		<property name="target" ref="ORMDAOFactory" />
		<property name="interfaces"
			value="gov.nih.nci.cananolab.system.dao.CustomizedORMDAO" />
		<property name="interceptorNames">
			<list>
				<idref local="TxInterceptor" />
			</list>
		</property>
	</bean>
</beans>