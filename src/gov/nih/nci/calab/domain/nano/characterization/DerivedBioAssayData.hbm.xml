<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="gov.nih.nci.calab.domain.nano.characterization">
	<class name="DerivedBioAssayData" table="CHARACTERIZATION_TABLE" lazy="true" polymorphism="explicit">
		<cache usage="read-write" />
		<id name="id" type="java.lang.Long" column="CHAR_TABLE_PK_ID" unsaved-value="0">
			<generator class="org.hibernate.id.TableHiLoGenerator">
				<param name="table">hibernate_unique_key</param>
				<param name="column">next_hi</param>
			</generator>
		</id>
		<property name="type" type="java.lang.String" column="TYPE" />
				
		<list name="datumCollection" cascade="all-delete-orphan" lazy="true">
			<cache usage="read-write" />
			<key column="CHAR_TABLE_PK_ID" />
			<list-index column="LIST_INDEX" />
			<one-to-many class="gov.nih.nci.calab.domain.nano.characterization.Datum" />
		</list>
		
		<many-to-one name="file"  class="gov.nih.nci.calab.domain.DerivedDataFile" column="LABFILE_PK_ID" lazy="false" fetch="join"/> 
		
	</class>

	<class name="Datum" table="TABLE_DATA" lazy="true" polymorphism="explicit">
		<cache usage="read-write" />
		<id name="id" type="java.lang.Long" column="TABLE_DATA_PK_ID" unsaved-value="0">
			<generator class="org.hibernate.id.TableHiLoGenerator">
				<param name="table">hibernate_unique_key</param>
				<param name="column">next_hi</param>
			</generator>
		</id>
		<property name="type" type="java.lang.String" column="TYPE" />
		<component name="value" class="gov.nih.nci.calab.domain.Measurement">
			<property name="value" column="VALUE" />
			<property name="unitOfMeasurement" column="VALUE_UNIT" />
		</component>
		<component name="control" class="gov.nih.nci.calab.domain.nano.characterization.Control">
			<property name="name" column="CONTROL_NAME" />
			<property name="type" column="CONTROL_TYPE" />
		</component>
		
		<list name="conditionCollection" cascade="all-delete-orphan" lazy="true">
			<cache usage="read-write" />
			<key column="TABLE_DATA_PK_ID" />
			<list-index column="LIST_INDEX" />
			<one-to-many class="gov.nih.nci.calab.domain.nano.characterization.Condition" />
		</list>
	</class>
	
	<class name="Condition" table="TABLE_DATA_CONDITION" lazy="true" polymorphism="explicit">
		<cache usage="read-write" />
		<id name="id" type="java.lang.Long" column="TABLE_DATA_COND_PK_ID" unsaved-value="0">
			<generator class="org.hibernate.id.TableHiLoGenerator">
				<param name="table">hibernate_unique_key</param>
				<param name="column">next_hi</param>
			</generator>
		</id>
		<property name="type" type="java.lang.String" column="TYPE" />
		<component name="value" class="gov.nih.nci.calab.domain.Measurement">
			<property name="value" column="VALUE" />
			<property name="unitOfMeasurement" column="VALUE_UNIT" />
		</component>
	</class>
</hibernate-mapping>
