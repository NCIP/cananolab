<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:context="http://www.springframework.org/schema/context"
	xmlns:jee="http://www.springframework.org/schema/jee"
	xmlns:tx="http://www.springframework.org/schema/tx"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-4.1.xsd
						http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-4.1.xsd
						http://www.springframework.org/schema/jee http://www.springframework.org/schema/jee/spring-jee-4.1.xsd
						http://www.springframework.org/schema/tx http://www.springframework.org/schema/tx/spring-tx-4.1.xsd">
	
	<context:annotation-config />

	<context:component-scan base-package="gov.nih.nci.cananolab" />
	
	<jee:jndi-lookup id="dataSource" jndi-name="java:jboss/datasources/caNanoLab"  />

	<bean id="txManager" class="org.springframework.jdbc.datasource.DataSourceTransactionManager">
		<property name="dataSource" ref="dataSource" />
	</bean>
	
	<tx:annotation-driven transaction-manager="txManager" />
	
	<bean id="quartzScheduler"
		class="gov.nih.nci.cananolab.restful.core.QuartzScheduler">
		<property name="csmCleanupIntervalInMinutes" value="15" />
		<property name="publicCountPullIntervalInHours" value="24" />
		<property name="indexIntervalInHours" value="24" />
	</bean>
	
</beans>